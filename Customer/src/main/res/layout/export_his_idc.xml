<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_his_idc"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="18dp"
    android:paddingTop="15dp"
    android:paddingBottom="15dp">

    <ImageView
        android:id="@+id/iv_idc"
        android:layout_width="122dp"
        android:layout_height="80dp"
        android:scaleType="centerCrop"
        android:background="@drawable/empty_drawable"/>

    <TextView
        android:id="@+id/tv_idc_name"
        android:layout_width="122dp"
        android:layout_height="wrap_content"
        android:text="---"
        android:gravity="center"
        style="@style/FontStyleGraySmaller66"
        android:layout_below="@id/iv_idc"/>


    <ImageView
        android:id="@+id/iv_idc1"
        android:layout_toRightOf="@id/iv_idc"
        android:layout_marginLeft="20dp"
        android:layout_width="122dp"
        android:layout_height="80dp"
        android:scaleType="centerCrop"
        android:background="@drawable/empty_drawable"/>

    <TextView
        android:id="@+id/tv_idc_name1"
        android:layout_alignLeft="@id/iv_idc1"
        android:layout_width="122dp"
        android:layout_height="wrap_content"
        android:text="---"
        android:gravity="center"
        style="@style/FontStyleGraySmaller66"
        android:layout_below="@id/iv_idc1"/>

</RelativeLayout>