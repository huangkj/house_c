<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_main_gray"
    android:orientation="vertical">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:paddingBottom="22dp"
                android:paddingLeft="25dp"
                android:paddingRight="25dp"
                android:paddingTop="22dp">

                <TextView
                    android:id="@+id/tv1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="你理想家的位置"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv1"
                    android:layout_marginTop="15dp"
                    android:text="位置"
                    android:textColor="@color/text_normal"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv2"
                    android:layout_marginTop="15dp"
                    android:text="地铁"
                    android:textColor="@color/text_normal"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tvSelectArea"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/tv2"
                    android:layout_marginLeft="30dp"
                    android:layout_toRightOf="@id/tv2"
                    android:drawablePadding="10dp"
                    android:drawableRight="@mipmap/more"
                    android:gravity="right"
                    android:hint="请选择区"
                    android:textColor="@color/text_normal"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tvSelectLine"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/tv3"
                    android:layout_marginLeft="30dp"
                    android:layout_toRightOf="@id/tv3"
                    android:drawablePadding="10dp"
                    android:drawableRight="@mipmap/more"
                    android:gravity="right"
                    android:hint="请选择地铁线"
                    android:textColor="@color/text_normal"
                    android:textSize="16sp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:paddingBottom="22dp"
                android:paddingLeft="25dp"
                android:paddingRight="25dp"
                android:paddingTop="22dp">

                <TextView
                    android:id="@+id/tv11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="你理想家的类型"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <com.easylife.house.customer.view.FlowViewGroup
                    android:id="@+id/groupTagsHouseType"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv11" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:paddingBottom="22dp"
                android:paddingLeft="25dp"
                android:paddingRight="25dp"
                android:paddingTop="22dp">

                <TextView
                    android:id="@+id/tv111"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="你预算的价格"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <com.easylife.house.customer.view.FlowViewGroup
                    android:id="@+id/groupTagsBudget"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv111" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:paddingBottom="22dp"
                android:paddingLeft="25dp"
                android:paddingRight="25dp"
                android:paddingTop="22dp">

                <TextView
                    android:id="@+id/tv11111"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="你打算什么时间购买"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <com.easylife.house.customer.view.FlowViewGroup
                    android:id="@+id/groupTagsHouseArea"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv11111" />

            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:paddingBottom="22dp"
                android:paddingLeft="25dp"
                android:paddingRight="25dp"
                android:paddingTop="22dp">

                <TextView
                    android:id="@+id/tv1111"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:text="你倾向的户型"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <com.easylife.house.customer.view.FlowViewGroup
                    android:id="@+id/groupTagsHouseStructur"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv1111" />

            </RelativeLayout>



            <RelativeLayout
                android:id="@+id/laySort"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:paddingBottom="22dp"
                android:paddingLeft="25dp"
                android:paddingRight="25dp"
                android:paddingTop="22dp"
                android:visibility="visible">

                <TextView
                    android:id="@+id/tv111111"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="选定楼盘的排序"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <com.easylife.house.customer.view.FlowViewGroup
                    android:id="@+id/groupTagsSorts"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv111111" />

            </RelativeLayout>

        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="46dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.easylife.house.customer.view.ButtonTouch
                android:id="@+id/btnReset"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:background="@drawable/shape_bg_orange_2"
                android:text="重置"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <com.easylife.house.customer.view.ButtonTouch
                android:id="@+id/btnSubmit"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:background="@drawable/shape_bg_orange_2"
                android:text="确定"
                android:textColor="@color/white"
                android:textSize="16sp" />

        </LinearLayout>

        <View
            android:id="@+id/centerView"
            android:layout_width="2dp"
            android:layout_height="16.3dp"
            android:layout_centerInParent="true"
            android:background="@color/white"/>


    </RelativeLayout>
</LinearLayout>