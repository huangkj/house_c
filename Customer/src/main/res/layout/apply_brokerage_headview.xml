<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:animateLayoutChanges="true"
    android:background="@color/_f8f8f8"
    android:orientation="vertical"
    tools:context=".ui.mine.brokerage.ApplyBrokerageActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingBottom="16dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="姓名"
            android:textColor="#ff535353"
            android:textSize="15sp" />


        <TextView
            android:id="@+id/tvUserName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="59dp"
            android:background="@null"
            android:gravity="left"
            android:hint="请输入姓名"
            android:textSize="15sp" />

    </LinearLayout>


    <include
        layout="@layout/cut_line_h"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="20dp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingBottom="16dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="身份证号"
            android:textColor="#ff535353"
            android:textSize="15sp" />


        <TextView
            android:id="@+id/tvIdCardNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="28dp"
            android:background="@null"
            android:gravity="left"
            android:hint="请输入身份证号"
            android:textSize="15sp" />

    </LinearLayout>




    <RelativeLayout
        android:id="@+id/relSelectBankCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:paddingBottom="16dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="16dp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="选择银行卡"
            android:textColor="#ff535353"
            android:textSize="16sp"
            android:textStyle="bold" />


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@mipmap/pub_ic_arrow_right" />


    </RelativeLayout>

    <include
        layout="@layout/cut_line_h"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="20dp" />

    <LinearLayout
        android:id="@+id/llBankCardContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingBottom="16dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="16dp"
        android:visibility="visible">

        <TextView
            android:id="@+id/tvBankName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="中国建设银行"
            android:textColor="#ff535353"
            android:textSize="15sp" />


        <TextView
            android:id="@+id/tvBankCardDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="尾号5066储蓄卡"
            android:textColor="#ff535353"
            android:textSize="15sp" />

    </LinearLayout>


    <RelativeLayout
        android:id="@+id/relSelectOrder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:paddingBottom="16dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="16dp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="选择订单"
            android:textColor="#ff535353"
            android:textSize="16sp"
            android:textStyle="bold" />


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@mipmap/pub_ic_arrow_right" />


    </RelativeLayout>

    <include
        layout="@layout/cut_line_h"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="20dp" />

</LinearLayout>