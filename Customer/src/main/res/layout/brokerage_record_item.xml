<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/select_order_item_bg"
    android:orientation="vertical"
    android:paddingBottom="20dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/tvBrokerageType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:text="佣金结算"
            android:textColor="#ff535353"
            android:textSize="15sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/tvDateBrokerage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tvBrokerageType"
            android:layout_below="@+id/tvBrokerageType"
            android:layout_marginTop="6dp"
            android:text="2018/10/30 13:09"
            android:textColor="#ff535353"
            android:textSize="13sp" />


        <TextView
            android:id="@+id/tvBrokerageStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tvBrokerageType"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:text="审核通过"
            android:textColor="#ff44b47e"
            android:textSize="12sp" />


    </RelativeLayout>


    <android.support.v7.widget.RecyclerView
        android:id="@+id/rcvItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="12dp" />

    <!--
        <com.easylife.house.customer.view.NoScrollListView
            android:id="@+id/rcvItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="12dp" />
    -->


    <LinearLayout
        android:id="@+id/llOrderCount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingBottom="16dp"
        android:paddingTop="14dp">


        <TextView
            android:id="@+id/tvOrderCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="共6笔申请订单"
            android:textColor="#ff7c7c7c"
            android:textSize="13sp" />


        <ImageView
            android:id="@+id/ivOrderCountStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:src="@mipmap/arrow_house_down"
            android:tint="@color/_ff6800" />


    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="6dp"
        android:background="@drawable/select_order_cut_line"
        android:layerType="software" />


    <TextView
        android:id="@+id/tvTotalPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:text="金额：¥27000.00"
        android:textColor="#fffd6a41"
        android:textSize="13sp" />

</LinearLayout>