<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/broker_reocrd_item_item_bg"
    android:paddingBottom="15dp"
    android:paddingTop="15dp">

    <TextView
        android:id="@+id/tvIndex"
        android:layout_width="28dp"
        android:layout_height="19dp"
        android:layout_centerVertical="true"
        android:background="@drawable/broker_index_bg"
        android:gravity="center"
        android:text="1"
        android:textColor="#ffffffff"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/tvUserNameIItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/tvIndex"
        android:text="王宇嫣（132****0090）"
        android:textColor="#ff535353"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tvHouseNameIItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tvUserNameIItem"
        android:layout_below="@+id/tvUserNameIItem"
        android:singleLine="true"
        android:paddingRight="15dp"
        android:layout_toLeftOf="@+id/tvMoneyIItem"
        android:ellipsize="end"
        android:layout_marginTop="8dp"
        android:text="五矿万科城 13-301"
        android:textColor="#ff8c8c8c"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/tvMoneyIItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="15dp"
        android:text="¥900.00"
        android:textColor="#ff535353"
        android:textSize="14sp" />

</RelativeLayout>