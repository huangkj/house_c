<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/house_dialog_bg"
    android:orientation="vertical"
    android:paddingLeft="20dp"
    android:paddingBottom="40dp"
    android:paddingRight="20dp">

    <ImageView
        android:padding="3dp"
        android:id="@+id/ivClose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="20dp"
        android:src="@mipmap/iv_close_house_dialog" />

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="楼盘动态提醒"
        android:textColor="#ff333333"
        android:textSize="22sp" />


    <TextView
        android:id="@+id/tvTips"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="订阅楼盘动态，不再错过该楼盘的最新消息！"
        android:textColor="#ff8b8b8b"
        android:textSize="12sp" />


    <TextView
        android:id="@+id/tvSubCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="已有218人订阅"
        android:textColor="#ffff6800"
        android:textSize="13sp" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp">

        <EditText
            android:id="@+id/etPhoneNumber"
            android:theme="@style/houseDialogEd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入订阅手机号"
            android:inputType="number"
            android:maxLength="11"
            android:singleLine="true"
            android:textColor="#ff484848" />


        <ImageView
            android:id="@+id/ivClear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_gravity="right"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            android:src="@mipmap/ic_clear" />

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp">

        <EditText
            android:id="@+id/etVerificationCode"
            android:theme="@style/houseDialogEd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入验证码"
            android:inputType="number"
            android:maxLength="6"
            android:singleLine="true"
            android:textColor="#ff484848" />


        <TextView
            android:id="@+id/tvGetVerificationCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_gravity="right"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            android:text="获取验证码"
            android:textColor="#ffff6800"
            android:textSize="12sp" />

    </RelativeLayout>


    <TextView
        android:id="@+id/tvConfirm"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/house_dialg_tv_bg"
        android:gravity="center"
        android:text="确定"
        android:textColor="#ffffffff"
        android:textSize="16sp" />


</LinearLayout>