<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="210dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/fitment_banner" />

                <ImageView
                    android:id="@+id/imageBack"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_margin="10dp"
                    android:scaleType="center"
                    android:src="@mipmap/fitment_back"
                    android:tint="@color/white" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:orientation="horizontal"
                    android:paddingLeft="15dp"
                    android:paddingTop="20dp"
                    android:paddingRight="15dp">

                    <TextView
                        android:id="@+id/layFitmentCase"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginRight="8dp"
                        android:layout_weight="1"
                        android:background="@mipmap/fitment_case"
                        android:gravity="center"
                        android:text="设计案例"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/layFitmentKnowledge"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginRight="8dp"
                        android:layout_weight="1"
                        android:background="@mipmap/fitment_knowledge"
                        android:gravity="center"
                        android:text="装修知识"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/layFitmentFreeOffer"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginRight="8dp"
                        android:layout_weight="1"
                        android:background="@mipmap/fitment_free"
                        android:gravity="center"
                        android:text="免费报价"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/layFitmentAppointment"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@mipmap/fitment_appointment"
                        android:gravity="center"
                        android:text="预约服务"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:textStyle="bold" />


                </LinearLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="8dp"
                    android:src="@mipmap/fitment_hot" />
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="18dp"
                android:paddingTop="31dp"
                android:text="我的装修方案"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/layFitmentCaseItem"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:background="@drawable/bg_shadow_orange"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="4"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:paddingLeft="20dp"
                    android:paddingRight="5dp">

                    <TextView
                        android:id="@+id/tvCaseTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="装修小白不用怕"
                        android:textColor="@color/fitment_orange"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/tvCaseText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="装修小白不用怕"
                        android:textColor="@color/fitment_orange"
                        android:textSize="12sp" />

                </LinearLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="5">

                    <ImageView
                        android:id="@+id/imgCaseImage"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@mipmap/fitment_case_bg" />

                    <ImageView
                        android:id="@+id/imgCaseMore"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="30dp"
                        android:src="@mipmap/more" />
                </RelativeLayout>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:paddingLeft="18dp"
                    android:paddingBottom="16dp"
                    android:text="推荐设计案例"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvRecommendCase"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="14dp"
                    android:layout_marginRight="8dp"
                    android:drawableRight="@mipmap/pub_ic_arrow_right"
                    android:padding="10dp"
                    android:text="更多 "
                    android:textSize="12sp" />
            </RelativeLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerCase"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="18dp"
                android:scrollbars="none" />

            <LinearLayout
                android:id="@+id/layRecommendRead"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="18dp"
                        android:paddingTop="31dp"
                        android:paddingBottom="16dp"
                        android:text="推荐阅读"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvRecommendRead"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="26dp"
                        android:layout_marginRight="8dp"
                        android:drawableRight="@mipmap/pub_ic_arrow_right"
                        android:padding="10dp"
                        android:text="更多 "
                        android:textSize="12sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/layFitmentReadItem"
                    android:layout_width="match_parent"
                    android:layout_height="130dp"
                    android:layout_marginLeft="13dp"
                    android:layout_marginRight="13dp"
                    android:background="@drawable/bg_shadow_gray"
                    android:paddingLeft="16dp"
                    android:paddingTop="14dp"
                    android:paddingRight="16dp"
                    android:paddingBottom="14dp">

                    <TextView
                        android:id="@+id/tvReadTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="6dp"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="推荐阅读标题推荐阅读标题推荐阅读标题推荐阅读标题"
                        android:textColor="@color/gray_title"
                        android:textSize="15sp" />

                    <ImageView
                        android:id="@+id/imgReadImage"
                        android:layout_width="100dp"
                        android:layout_height="67dp"
                        android:layout_below="@id/tvReadTitle"
                        android:layout_marginRight="10dp"
                        android:src="@color/gradient_end" />

                    <TextView
                        android:id="@+id/tvReadContent"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_below="@id/tvReadTitle"
                        android:layout_toRightOf="@id/imgReadImage"
                        android:ellipsize="end"
                        android:text="推荐阅读内容推荐阅读内容推荐阅读内容推荐阅读内容"
                        android:textColor="@color/gray_content"
                        android:textSize="12sp" />
                </RelativeLayout>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="18dp"
                android:paddingTop="31dp"
                android:paddingBottom="30dp"
                android:text="安心装修仅四步"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="13dp"
                android:layout_marginRight="13dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/fitment_rate_icon_1" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:background="@mipmap/fitment_rate_1"
                        android:paddingLeft="8dp"
                        android:paddingTop="2dp"
                        android:text="预约服务"
                        android:textColor="@color/gray_title"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="沟通需求\n预约上门"
                        android:textColor="@color/gray_desc"
                        android:textSize="11sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/fitment_rate_icon_2" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:background="@mipmap/fitment_rate_2"
                        android:paddingLeft="8dp"
                        android:paddingTop="2dp"
                        android:text="上门量房"
                        android:textColor="@color/gray_title"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="专业人员\n入户测量"
                        android:textColor="@color/gray_desc"
                        android:textSize="11sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/fitment_rate_icon_3" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:background="@mipmap/fitment_rate_3"
                        android:paddingLeft="8dp"
                        android:paddingTop="2dp"
                        android:text="签订协议"
                        android:textColor="@color/gray_title"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="收费透明\n服务质保"
                        android:textColor="@color/gray_desc"
                        android:textSize="11sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/fitment_rate_icon_4" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:background="@mipmap/fitment_rate_4"
                        android:paddingLeft="8dp"
                        android:paddingTop="2dp"
                        android:text="售后无忧"
                        android:textColor="@color/gray_title"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="售后维权\n实时答疑"
                        android:textColor="@color/gray_desc"
                        android:textSize="11sp" />
                </LinearLayout>
            </LinearLayout>


            <Button
                android:id="@+id/btnFitmentAppointment"
                android:layout_width="145dp"
                android:layout_height="44dp"
                android:layout_gravity="center_horizontal"
                android:layout_margin="34dp"
                android:background="@drawable/shape_bg_btn_orange_90"
                android:text="预约咨询"
                android:textColor="@color/white"
                android:textSize="15sp" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>