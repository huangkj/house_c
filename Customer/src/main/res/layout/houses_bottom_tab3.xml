            <TextView
                style="@style/FontStyleGraySmaller"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="9dp"
                android:clickable="false"
                android:text="收藏"
                android:textColor="#ff868686"
                android:textSize="12sp" />

        </LinearLayout>

