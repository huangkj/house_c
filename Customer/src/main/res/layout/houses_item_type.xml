<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="150dp"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal">

    <ImageView
        android:id="@+id/iv_type"
        android:layout_width="match_parent"
        android:layout_height="89dp"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/tv_type_room"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_type"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="10dp"
        android:layout_toRightOf="@+id/tv_type_status"
        android:ellipsize="end"
        android:lines="1"
        android:layout_marginTop="2dp"
        android:text=""
        android:textColor="#ff484848"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/tv_type_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_type"
        android:layout_marginTop="5.5dp"
        android:background="@drawable/orange_end_rect_line_bg3"
        android:paddingLeft="4dp"
        android:paddingTop="1dp"
        android:paddingRight="4dp"
        android:paddingBottom="1dp"
        android:text="--"
        android:textColor="#ffffffff"
        android:textSize="9sp" />

    <TextView
        android:id="@+id/tv_sale_star"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_type_room"
        android:textColor="#ffff6800"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tv_area"
        android:layout_width="62dp"
        android:layout_height="wrap_content"
        android:layout_alignRight="@id/iv_type"
        android:layout_alignBottom="@+id/tv_sale_star"
        android:ellipsize="end"
        android:gravity="right"
        android:lines="1"
        android:text=""
        android:textColor="#ffa2a2a2"
        android:textSize="12sp" />

</RelativeLayout>