<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="15dp"
        android:paddingLeft="18dp"
        android:paddingTop="15dp">

        <ImageView
            android:id="@+id/iv_home"
            android:layout_width="100dp"
            android:layout_height="74dp"
            android:scaleType="centerCrop"
            android:background="@drawable/empty_drawable" />

        <TextView
            android:id="@+id/home_name"
            style="@style/FontStyleLightBlackSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@id/iv_home"
            android:text="---" />

        <TextView
            android:id="@+id/tv_home_position"
            style="@style/FontStyleGraySmaller66"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/home_name"
            android:layout_below="@id/home_name"
            android:layout_marginTop="3dp"
            android:text="---" />

        <TextView
            android:id="@+id/tv_home_time"
            style="@style/FontStyleGraySmaller66"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/home_name"
            android:layout_below="@id/tv_home_position"
            android:layout_marginTop="3dp"
            android:text="---" />

        <TextView
            android:id="@+id/tv_price"
            style="@style/FontStyleEndSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/home_name"
            android:layout_below="@id/tv_home_time"
            android:layout_marginTop="3dp"
            android:text="---" />

    </RelativeLayout>

    <View
        android:id="@+id/line_home"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:visibility="gone"
        android:background="@color/gray_f8" />

</LinearLayout>