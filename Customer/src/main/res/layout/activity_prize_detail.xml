<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.mine.prize.PrizeDetailActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ivPrizeDetail"
                android:layout_width="match_parent"
                android:layout_height="226dp" />


            <TextView
                android:id="@+id/tvTitlePrizeDetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18dp"
                android:layout_marginTop="10dp"
                android:textColor="#ff444345"
                android:textSize="14sp" />


            <TextView
                android:id="@+id/tvDatePrizeDetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18dp"
                android:layout_marginTop="10dp"
                android:textColor="#ff666565"
                android:textSize="12sp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18dp"
                android:layout_marginTop="26dp"
                android:text="奖品说明"
                android:textColor="#ff444345"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tvDescPrizeDetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="18dp"
                android:layout_marginTop="10dp"
                android:textColor="#ff848484"
                android:textSize="14sp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18dp"
                android:layout_marginTop="16dp"
                android:text="领取规则"
                android:textColor="#ff444345"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tvRulePrizeDetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="18dp"
                android:layout_marginTop="10dp"
                android:textColor="#ff848484"
                android:textSize="14sp" />


        </LinearLayout>


    </ScrollView>


    <TextView
        android:id="@+id/tvSubmitPrizeDetail"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:background="@color/orange21"
        android:gravity="center"
        android:text="点击领取"
        android:textColor="@color/white"
        android:textSize="14sp" />

</LinearLayout>