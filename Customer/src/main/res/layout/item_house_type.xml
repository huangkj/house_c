<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_pub_bg_white"
        android:backgroundTint="@color/white"
        android:paddingTop="16dp"
        android:paddingBottom="20dp">

        <ImageView
            android:id="@+id/iv_type"
            android:layout_width="98dp"
            android:layout_height="107dp"
            android:layout_marginLeft="14dp"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/tv_type_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="17dp"
            android:layout_toRightOf="@id/iv_type"
            android:textColor="@color/_838282"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_area"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/tv_type_name"
            android:layout_alignParentRight="true"
            android:layout_marginRight="17dp"
            android:textColor="@color/_838282"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_price"
            style="@style/FontStyleEndMiddle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_type_name"
            android:layout_alignLeft="@id/tv_type_name"
            android:layout_marginTop="10dp" />

        <TextView
            android:id="@+id/tv_type"
            style="@style/FontStyleGrayMiddle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_price"
            android:layout_alignLeft="@id/tv_price"
            android:layout_marginTop="10dp" />

        <TextView
            android:id="@+id/tv_sale"
            style="@style/FontStyleWhiteSmaller"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_type"
            android:layout_alignLeft="@id/tv_price"
            android:layout_marginTop="6dp"
            android:background="@drawable/shape_bg_btn_gradient_3"
            android:paddingLeft="5dp"
            android:paddingTop="1dp"
            android:paddingRight="5dp"
            android:paddingBottom="1dp"
            android:text="待定"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/tv_room_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tv_sale"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:text="184套房源 "
            android:textColor="#ff8b8b8b"
            android:textSize="12sp" />

        <com.easylife.house.customer.view.FlowViewGroup
            android:id="@+id/type_flow"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_below="@id/tv_type"
            android:layout_toRightOf="@id/tv_sale" />


    </RelativeLayout>

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="14dp"
        android:background="@color/gray_line" />
</LinearLayout>