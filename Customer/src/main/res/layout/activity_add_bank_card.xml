<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f8f8f8f8"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingLeft="20dp"
        android:paddingTop="16dp"
        android:paddingRight="20dp"
        android:paddingBottom="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="持卡人姓名"
            android:textColor="#ff535353"
            android:textSize="15sp" />


        <EditText
            android:id="@+id/etBankUserName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:background="@null"
            android:gravity="right"
            android:hint="请输入姓名"
            android:singleLine="true"
            android:textSize="15sp" />

    </LinearLayout>


    <include layout="@layout/include_line_hor_left_20" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingLeft="20dp"
        android:paddingTop="16dp"
        android:paddingRight="20dp"
        android:paddingBottom="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="银行卡号"
            android:textColor="#ff535353"
            android:textSize="15sp" />


        <EditText
            android:id="@+id/etBankCardNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:background="@null"
            android:gravity="right"
            android:hint="请输入银行卡号"
            android:singleLine="true"
            android:textSize="15sp" />

    </LinearLayout>

    <include layout="@layout/include_line_hor_left_20" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingLeft="20dp"
        android:paddingTop="16dp"
        android:paddingRight="20dp"
        android:paddingBottom="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="身份证号"
            android:textColor="#ff535353"
            android:textSize="15sp" />


        <EditText
            android:id="@+id/etIdCardNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:background="@null"
            android:gravity="right"
            android:hint="请输入身份证号"
            android:singleLine="true"
            android:textSize="15sp" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/llCreateBank"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingLeft="20dp"
        android:paddingTop="16dp"
        android:paddingRight="20dp"
        android:paddingBottom="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="开户行"
            android:textColor="#ff535353"
            android:textSize="15sp" />


        <TextView
            android:id="@+id/etCreateBank"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:background="@null"
            android:drawableRight="@mipmap/arrow_right_select"
            android:drawablePadding="8dp"
            android:gravity="right"
            android:hint="请选择开户行"
            android:singleLine="true"
            android:textSize="15sp" />

    </LinearLayout>

    <include layout="@layout/include_line_hor_left_20" />

    <LinearLayout
        android:id="@+id/llCreateBankAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingLeft="20dp"
        android:paddingTop="16dp"
        android:paddingRight="20dp"
        android:paddingBottom="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="开户行地区"
            android:textColor="#ff535353"
            android:textSize="15sp" />


        <TextView
            android:id="@+id/etCreateBankAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:background="@null"
            android:drawableRight="@mipmap/arrow_right_select"
            android:drawablePadding="8dp"
            android:gravity="right"
            android:hint="请选择开户行地区"
            android:singleLine="true"
            android:textSize="15sp" />

    </LinearLayout>

    <include layout="@layout/include_line_hor_left_20" />

    <LinearLayout
        android:id="@+id/llCreateBankSub"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingLeft="20dp"
        android:paddingTop="16dp"
        android:paddingRight="20dp"
        android:paddingBottom="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="开户行支行"
            android:textColor="#ff535353"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/imgTipSub"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:padding="5dp"
            android:src="@mipmap/icon_tip_sub" />

        <TextView
            android:id="@+id/etCreateBankSub"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:background="@null"
            android:drawableRight="@mipmap/arrow_right_select"
            android:drawablePadding="8dp"
            android:gravity="right"
            android:hint="请选择开户行支行"
            android:singleLine="true"
            android:textSize="15sp" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingLeft="20dp"
        android:paddingTop="16dp"
        android:paddingRight="20dp"
        android:paddingBottom="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="银行预留手机号"
            android:textColor="#ff535353"
            android:textSize="15sp" />


        <EditText
            android:id="@+id/etBankPhoneNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:background="@null"
            android:gravity="right"
            android:hint="请输入银行预留手机号"
            android:inputType="number"
            android:maxLength="11"
            android:singleLine="true"
            android:textSize="15sp" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/_f8f8f8"
        android:paddingLeft="19dp"
        android:paddingRight="19dp">


        <TextView
            android:id="@+id/tvText2AddBank"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="19dp"
            android:text="*请保证输入的信息真实有效"
            android:textColor="#ff535353"
            android:textSize="14sp" />

        <CheckBox
            android:id="@+id/cbAgreeAddBank"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvText2AddBank"
            android:layout_marginTop="14dp"
            android:button="@null"
            android:drawableLeft="@drawable/selector_id_crad"
            android:drawablePadding="7dp"
            android:text="同意"
            android:textColor="#9a9a9a" />

        <TextView
            android:id="@+id/tvUserBookAddBank"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/cbAgreeAddBank"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/cbAgreeAddBank"
            android:text="《好生活用户协议》"
            android:textColor="#FF6800"
            android:textSize="15sp" />


        <com.easylife.house.customer.view.ButtonTouch
            android:id="@+id/btnNextAddBank"
            android:layout_width="match_parent"
            android:layout_height="@dimen/pub_title_bar_height"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="18dp"
            android:layout_marginBottom="60dp"
            android:background="@drawable/shape_bg_btn_gradient"
            android:text="下一步"
            android:textColor="@color/white"
            android:textSize="14sp" />


    </RelativeLayout>


</LinearLayout>