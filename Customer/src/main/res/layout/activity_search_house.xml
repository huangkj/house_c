<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.homesearch.searchhouse.SearchHouseActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/pub_title_bar_height"
        android:background="@color/_f8f8f8"

        android:gravity="center_vertical"
        android:orientation="horizontal">

        <RelativeLayout

            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <EditText
                android:id="@+id/etSearchText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="7dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="7dp"
                android:height="@dimen/margin_chat_activity"
                android:background="@drawable/house_search_bg"
                android:gravity="center_vertical"
                android:hint="请输入楼盘名称"
                android:imeOptions="actionSearch"
                android:paddingLeft="10dp"
                android:singleLine="true"
                android:textColor="#ff5d5d5d"
                android:textSize="14sp" />


            <ImageView
                android:id="@+id/ivClear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="14dp"
                android:src="@mipmap/ic_clear"
                android:visibility="gone" />

        </RelativeLayout>

        <TextView
            android:id="@+id/tvCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="19dp"
            android:layout_marginRight="16dp"
            android:text="取消" />

    </LinearLayout>


</RelativeLayout>