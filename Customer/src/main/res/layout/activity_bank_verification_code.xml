<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/_f8f8f8"
    tools:context=".ui.mine.card.BankVerificationCodeActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingBottom="16dp"
        android:paddingEnd="20dp"
        android:paddingStart="20dp"
        android:paddingTop="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="*验证码"
            android:textColor="#ff535353"
            android:textSize="15sp" />


        <EditText
            android:id="@+id/etVerification"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="请输入验证码"
            android:background="@null"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="20dp"
            android:layout_weight="1"
            android:inputType="number"
            android:maxLength="6"
            android:textSize="15sp" />


        <TextView
            android:id="@+id/tvGetVerificationCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="获取验证码"
            android:textColor="#ffff6800"
            android:textSize="13sp" />


    </LinearLayout>

    <com.easylife.house.customer.view.ButtonTouch
        android:id="@+id/btnBindBankCard"
        android:layout_width="match_parent"
        android:layout_height="@dimen/pub_title_bar_height"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="60dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="18dp"
        android:background="@drawable/shape_bg_btn_gradient"
        android:text="确认绑定"
        android:textColor="@color/white"
        android:textSize="14sp" />


</RelativeLayout>