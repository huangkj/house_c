<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv1"
            android:scaleType="centerCrop"
            android:layout_width="190dp"
            android:layout_height="168dp" />

        <View
            android:layout_width="190dp"
            android:layout_height="80dp"
            android:layout_alignBottom="@id/iv1"
            android:background="@drawable/index_gradient_bg"/>

        <CheckBox
            android:id="@+id/iv_collect1"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_alignRight="@id/iv1"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:button="@null"
            android:background="@drawable/index_check"/>


        <TextView
            android:id="@+id/tv_area"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="8dp"
            android:layout_alignBottom="@id/iv1"
            android:textColor="@color/white"
            android:layout_marginBottom="8dp"
            android:text="---"/>
        <TextView
            android:id="@+id/tv_money"
            android:layout_above="@id/tv_area"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="8dp"
            android:textColor="@color/white"
            android:text="---"/>
        <TextView
            android:id="@+id/tv_name"
            android:layout_above="@id/tv_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:textColor="@color/white"
            android:text="---"/>


        <View
            android:id="@+id/line1"
            android:layout_toRightOf="@id/iv1"
            android:layout_width="2dp"
            android:layout_height="168dp"
            android:background="@color/white"/>

        <ImageView
            android:id="@+id/iv2"
            android:scaleType="centerCrop"
            android:layout_toRightOf="@id/line1"
            android:layout_width="167dp"
            android:layout_height="168dp"
            android:layout_alignParentRight="true" />

        <View
            android:layout_width="167dp"
            android:layout_height="80dp"
            android:layout_alignBottom="@id/iv2"
            android:layout_alignParentRight="true"
            android:background="@drawable/index_gradient_bg"/>

        <CheckBox
            android:id="@+id/iv_collect2"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:button="@null"
            android:background="@drawable/index_check"/>

        <TextView
            android:id="@+id/tv_area2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_alignLeft="@id/iv2"
            android:layout_alignBottom="@id/iv2"
            android:layout_marginLeft="8dp"
            android:textColor="@color/white"
            android:layout_marginBottom="8dp"
            android:text="---"/>
        <TextView
            android:id="@+id/tv_money2"
            android:layout_above="@id/tv_area2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_alignLeft="@id/iv2"
            android:layout_marginLeft="8dp"
            android:textColor="@color/white"
            android:text="---"/>
        <TextView
            android:id="@+id/tv_name2"
            android:layout_above="@id/tv_money2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/iv2"
            android:layout_marginLeft="8dp"
            android:textColor="@color/white"
            android:text="---"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/white"/>

