<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="true">
        <shape android:shape="rectangle">
            <gradient android:angle="180" android:endColor="#ffffac00" android:startColor="#ffff6800" android:useLevel="true" />
            <corners android:radius="30dp" />
        </shape>
    </item>
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <gradient android:angle="180" android:endColor="#60ffac00" android:startColor="#60ff6800" android:useLevel="true" />
            <corners android:radius="30dp" />
        </shape>
    </item>


</selector>